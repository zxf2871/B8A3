<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.study.b8a3.touchstudy.TouchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Activity"
        android:textColor="#ffff" />

    <com.study.b8a3.touchstudy.MyViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:background="@color/blue_color">
        <com.study.b8a3.touchstudy.TouchView
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_margin="50dp"
            android:background="@color/green_color"
            android:gravity="center"
            android:text="View"
            android:textColor="#ffff" />
        <com.study.b8a3.touchstudy.TouchView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#ff0000"

            android:text="ViewGroup"
            android:textColor="#ffff" />

        <com.study.b8a3.touchstudy.MyView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            app:my_text="this is my view"
            app:my_text_color="#ff0000"
            app:my_background_color="#ff00ff"
            app:my_text_color_another="#00ffff"
            app:my_text_size="20sp"/>


    </com.study.b8a3.touchstudy.MyViewGroup>

</LinearLayout>
